@model SitefinityWebApp.Mvc.Models.SideNav.SideNavModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Frontend.Navigation.Mvc.Models;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.Model;
@using Telerik.Sitefinity;

    @{ 
        var ext = Model.ExtensionsPage;
        var extsvg = ext.GetValue<Lstring>("IconSVGMarkup");
    }

    <a href="@ext.GetUrl().Replace("~", "")" class="text-gray-300 hover:bg-gray-700 hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md">
        <!-- Current: "text-gray-300", Default: "text-gray-400 group-hover:text-gray-300" -->
        <!-- Heroicon name: outline/home -->
        @if (!String.IsNullOrEmpty(extsvg))
        {
            <svg class="text-white-300 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                @Html.Raw(extsvg)
            </svg>
        }

        @ext.Title
    </a>

    <h3 class="mt-5 px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">
        Components
    </h3>
    @foreach (var node in Model.ComponentPages)
    {
        var data = node.GetPageData();
        var svg = node.GetValue<Lstring>("IconSVGMarkup");

        <a href="@node.GetUrl().Replace("~", "")" class="text-gray-300 hover:bg-gray-700 hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md">
            <!-- Current: "text-gray-300", Default: "text-gray-400 group-hover:text-gray-300" -->
            <!-- Heroicon name: outline/home -->
            @if (!String.IsNullOrEmpty(svg))
            {
                <svg class="text-white-300 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    @Html.Raw(svg)
                </svg>
            }

            @node.Title
        </a>
    }


<div class="text-center mt-8 text-white text-sm mx-2 mb-4 py-4 px-3 rounded" style="background-color: rgba(255,255,255,.07)"> 
    <img src="/ResourcePackages/RSC/assets/hyper/images/help-icon.svg"  alt="Helper Icon Image" class="max-h-24 mx-auto mb-2"> 
    <p class="mb-3">If you're enjoying these widgets please consider donating to their ongoing development</p> 
    <a href="https://www.sitefinitysteve.com/donate" class="inline-flex items-center px-2 py-1 border border-gray-300 shadow-sm text-white text-sm rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Donate 🍺</a> 
</div>