        <div class="ng-cloak">
            <div class="form-group">
                <label for="sortOptions">Selected Library</label>
                <sf-list-selector sf-library-selector sf-media-type="documents" sf-selected-item-id="librarySelector.selectedItemId" sf-selected-item="librarySelector.selectedItem" />
            </div>

            <div class="form-group">
                <label for="sortOptions">Template</label>
                <div class="row">
                    <div class="col-xs-3">
                        <select id="sortOptions" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                            <option value="Simple"> Simple</option>
                            <option value="PanelBar"> PanelBar</option>
                            <option value="TreeView"> Treeview</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="navLevelsToInclude">Levels to Expand</label>

                <div class="row">
                    <div class="col-xs-3">
                        <select id="navLevelsToInclude" ng-model="properties.ExpandLevelDepth.PropertyValue" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="-1">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
            	<label>Render Selected Folder</label>
                
            </div>
        </div>
